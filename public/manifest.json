{
  "manifest_version": 3,

  "name": "TTL Enhance Extension",
  "description": "Enhance TTL experience",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://tt.live/*"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "permissions": ["storage"],

  "host_permissions": ["<all_urls>"]
}
